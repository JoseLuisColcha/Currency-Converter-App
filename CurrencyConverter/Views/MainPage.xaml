<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CurrencyConverter.MainPage"
             BackgroundImage="https://i.ibb.co/SKTDZ0Q/backgroudn-Money2.jpg"
             NavigationPage.HasNavigationBar="False">
    <StackLayout Orientation="Vertical">
        <Label Text="CONVERTIDOR DE"
               FontSize="30"
               FontAttributes="Bold"
               Margin="10,490,0,0"
               HorizontalOptions="Center"
               TextColor="White"
               VerticalOptions="End"
               FontFamily="{StaticResource Elianto}" />
        
        <Label Text="DIVISAS"
               FontSize="30"
               FontAttributes="Bold"
               Margin="20,0,0,0"
               HorizontalOptions="Center"
               TextColor="White"
               VerticalOptions="Center"
               FontFamily="{StaticResource  Elianto}" />
        <StackLayout VerticalOptions="End"
                     Spacing="5">
            <Label Text="Desarrollado por"
                   HorizontalOptions="Center"
                   TextColor="#9F9E9A"
                   FontSize="15"
                   Margin="30,20,30,0"
                   FontAttributes="Italic" />
            <Label Text="José Luis Colcha"
                   HorizontalOptions="Center"
                   TextColor="#9F9E9A"
                   FontSize="15"
                   Margin="30,10,30,0"
                   FontAttributes="Italic" />
            <Button Text="Empezar"
                    BackgroundColor="#C67C4E"
                    CornerRadius="80"
                    TextColor="White"
                    Margin="30,20,30,0" 
                    x:Name="btnStart"
                    Clicked="btnStart_Clicked"/>
        </StackLayout>
    </StackLayout>
</ContentPage>
